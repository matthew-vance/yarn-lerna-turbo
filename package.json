{
  "private": true,
  "name": "yarn-lerna-turbo",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:matthew-vance/yarn-lerna-turbo.git",
  "author": "Matthew Vance",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^4.0.0",
    "turbo": "^1.0.26"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "scripts": {
    "build": "turbo run build"
  }
}
