{
  "private": true,
  "name": "yarn-lerna-turbo",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:matthew-vance/yarn-lerna-turbo.git",
  "author": "Matthew Vance",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "turbo": "^1.0.26"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "scripts": {
    "build": "turbo run build",
    "cm": "cz",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,css,md,html,json}\"",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,css,md,html,json}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
